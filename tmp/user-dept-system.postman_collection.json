{
  "info": {
    "name": "望子成龙小学职工管理系统",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "获取图形验证码",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "http://localhost:8080/api/captcha/image", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "captcha", "image"] }
      }
    },
    {
      "name": "校验验证码",
      "request": {
        "method": "POST",
        "header": [],
        "url": { "raw": "http://localhost:8080/api/captcha/verify?uuid={{uuid}}&code={{code}}", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "captcha", "verify"], "query": [ { "key": "uuid", "value": "{{uuid}}" }, { "key": "code", "value": "{{code}}" } ] }
      }
    },
    {
      "name": "登录",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/x-www-form-urlencoded" } ],
        "body": { "mode": "urlencoded", "urlencoded": [ { "key": "username", "value": "admin" }, { "key": "password", "value": "admin123" } ] },
        "url": { "raw": "http://localhost:8080/api/auth/login", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "auth", "login"] }
      }
    },
    {
      "name": "用户列表",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "http://localhost:8080/api/users?page=1&per_page=10", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "users"], "query": [ { "key": "page", "value": "1" }, { "key": "per_page", "value": "10" } ] }
      }
    },
    {
      "name": "新增用户",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"123456\",\n  \"realname\": \"测试用户\",\n  \"email\": \"test@example.com\"\n}" },
        "url": { "raw": "http://localhost:8080/api/users", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "users"] }
      }
    },
    {
      "name": "部门列表",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "http://localhost:8080/api/departments?page=1&per_page=10", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "departments"], "query": [ { "key": "page", "value": "1" }, { "key": "per_page", "value": "10" } ] }
      }
    },
    {
      "name": "新增部门",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"code\": \"dept001\",\n  \"name\": \"技术部\",\n  \"parentCode\": \"\",\n  \"description\": \"技术部门\"\n}" },
        "url": { "raw": "http://localhost:8080/api/departments", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "departments"] }
      }
    },
    {
      "name": "添加用户到部门",
      "request": {
        "method": "POST",
        "header": [],
        "url": { "raw": "http://localhost:8080/api/departments/user/{{username}}/{{deptCode}}", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "departments", "user", "{{username}}", "{{deptCode}}"] }
      }
    },
    {
      "name": "移除用户从部门",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": { "raw": "http://localhost:8080/api/departments/user/{{username}}/{{deptCode}}", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api", "departments", "user", "{{username}}", "{{deptCode}}"] }
      }
    }
  ]
}